<% layout('layouts/boilerplate') -%>
    <%- include('../partials/flash') %>

        <div class="container text-center">
            <div class="row">
                <% for(let product of products){ %>
                    <div class="col-lg-3 mt-3 mb-3 product">
                        <div class="card" style="width: 18rem;">
                            <img src=<%=product.img%> class="card-img-top p-2" alt="...">
                            <div class="card-body">
                                <h5 class="card-title d-flex justify-content-between">
                                    <%=product.name%>
                                </h5>
                                <p class="card-text">
                                    <%=product.desc.substring(0,100)%>...
                                </p>
                                <h5 class="card-title">Price : $ <span style="color:rgb(237, 173, 24)">
                                        <%=product.price%>
                                    </span></h5>
                                <a href="/products/<%=product._id%>" class="btn btn-primary">view product</a>
                            </div>
                        </div>
                    </div>
                    <%} %>
            </div>
        </div>

        <style>
            .product{
                transition: .5s;
            }
            .product:hover{
                transform: scale(1.02);
                box-shadow: 0 0 3 6 rgba(0, 0, 0, 0.26);
            }
        </style>